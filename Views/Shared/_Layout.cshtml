
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Conference</title>
</head>
<body>
    @RenderBody()
    <h1>Suppa-Puppa Conference</h1>
    <div class="container">
        <p>Welcome words here...</p>
    </div>
    <div class="container">
        <h2>Sections</h2>
        <p>Here you can see already registered sections</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Section</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model) {
                    <tr>
                        <td>@obj.SectionName</td>
                        <td>@obj.Name</td>
                        <td>@obj.City</td>
                        <td>@obj.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container">
        <form class="form-horizontal" action='' method="POST">
            <fieldset>
                <a href="#regform" class="btn btn-info" data-toggle="collapse">Register Now!</a>
                <div id="regform" class="collapse">
                    <hr style="border-top:1px solid #8c8b8d" />
                    <div class="control-group">
                        <!-- Section -->
                        <label class="control-label" for="section">Section Abbreviation</label>
                        <div class="controls">
                            <input type="text" id="registerSection" name="registerSection" placeholder="" class="input-xlarge">
                            <p class="help-block">Abbreviation of section can contain any letters, without spaces</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Name -->
                        <label class="control-label" for="name">Section Full Name</label>
                        <div class="controls">
                            <input type="text" id="registerName" name="registerName" placeholder="" class="input-xlarge">
                            <p class="help-block">Please provide section full name</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- City -->
                        <label class="control-label" for="city">City</label>
                        <div class="controls">
                            <input type="text" id="registerCity" name="registerCity" placeholder="" class="input-xlarge">
                            <p class="help-block">Please provide a city</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Location -->
                        <label class="control-label" for="location">Location</label>
                        <div class="controls">
                            <input type="text" id="registerLocation" name="registerLocation" placeholder="" class="input-xlarge">
                            <p class="help-block">Please provide a section location</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <button class="btn btn-success" id="regButton">Register</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
</body>
</html>
